#!/bin/bash
sound=~/dotfiles/sounds/ding.wav
for ((i=0; i < ${1:-1}; i++)); do
    if which paplay &>/dev/null; then
        # Use paplay since it lets us give a volume.
        # Volume is in [0, 65535].
        paplay --volume 65500 "$sound" &>/dev/null
    else
        aplay "$sound" &>/dev/null
    fi
done

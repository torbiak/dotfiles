#!/bin/bash

# Print a table of all the 4-bit ANSI foreground/background color combinations.
# For the foreground there are 17 colors: default + 8 normal + 8 bright, and
# for the background there are 9 colors: default + 8 normal.

t='gYw' # Arbitrary test text

fgs=(
    'm' '1m' '30m' '1;30m' '31m' '1;31m' '32m' '1;32m' '33m' '1;33m' '34m'
    '1;34m' '35m' '1;35m' '36m' '1;36m' '37m' '1;37m'
)
bgs=(40m 41m 42m 43m 44m 45m 46m 47m)

# Print background headers.
printf '        default'
printf '   %s  ' "${bgs[@]}"
echo

for _fg in "${fgs[@]}"; do
    printf '%7s\033[%s   %s  ' "$_fg" "$_fg" "$t"
    for _bg in "${bgs[@]}"; do
        printf " \033[%s\033[%s  %s  \033[0m" "$_fg" "$_bg" "$t"
    done
    echo
done

"pamixer -t; statusbar once"
    XF86AudioMute

"pamixer -d 5; statusbar once"
    XF86AudioLowerVolume

"pamixer -i 5; statusbar once"
    XF86AudioRaiseVolume

"brightnessctl s 5%-"
    XF86MonBrightnessDown

"brightnessctl s 5%+"
    XF86MonBrightnessUp

"xclip -o -selection primary | xclip -selection clipboard"
    Mod4 + c

"slock"
    Mod4 + Shift + l

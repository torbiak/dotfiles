[alias]
    d = diff
    ci = commit
    co = checkout
    br = branch
    re = rebase
    l = log --graph --decorate --oneline
    ld = log --stat -p -n 1
    sb = show-branch
    st = status -s
    vimdiff = difftool -y -t vimdiff
    vd = difftool -y -t vimdiff
    pur = pull --rebase
    cp = cherry-pick
    ri = rebase -i
    cm = commit --amend
    cif = commit -am fixup
    dc = diff --cached
    rh = reset --hard
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
[user]
    name = Jordan Torbiak
    email = torbiak@gmail.com
[push]
    default = tracking
[branch]
    autosetuprebase = always
[core]
    excludesfile = ~/.gitignore
[apply]
    whitespace = fix
[notes]
    rewriteRef = refs/notes/*
[include]
    path = .gitconfig.local
[rebase]
    autoSquash = true
[pull]
    ff = only
[merge]
    tool = diffconflicts
[mergetool "diffconflicts"]
    cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[mergetool]
    keepBackup = false

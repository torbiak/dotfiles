"amixer set Master toggle; amixer set Headphone unmute; amixer set Speaker unmute; ~/.status.sh"
    XF86AudioMute

"amixer set Master 3db-; ~/.status.sh"
    XF86AudioLowerVolume

"amixer set Master 3db+; ~/.status.sh"
    XF86AudioRaiseVolume

"sudo bash -c 'echo $(($(< /sys/class/backlight/intel_backlight/brightness)-100)) > /sys/class/backlight/intel_backlight/brightness'"
    XF86MonBrightnessDown

"sudo bash -c 'echo $(($(< /sys/class/backlight/intel_backlight/brightness)+100)) > /sys/class/backlight/intel_backlight/brightness'"
    XF86MonBrightnessUp

"xclip -o -selection primary | xclip -selection clipboard"
    Mod4 + c

"slock"
    Mod4 + Shift + l

"sudo bash -c 'echo $(($(< /sys/class/backlight/intel_backlight/brightness)-100)) > /sys/class/backlight/intel_backlight/brightness'"
    Mod4 + Mod1 + s

"touch ~/.last_workout; ~/.status.sh"
    Mod4 + Shift + w
